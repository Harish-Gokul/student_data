<div class="div-center">
  <h2>Showing <%= @student.first_name %> Details</h2>
  <br>
  <button class="btn btn-outline-secondary"> <%= link_to "View post" , student_posts_path(@student),{style: "text-decoration: none;color: inherit"} %></button>
  <div style="margin: 1% 10%; border: 5px solid black; border-radius: 5px">
  <table class="table table-striped table-bordered" style="margin:0%" >
    <thead class="thead-dark">
    <tr>
      <th>Field</th>
      <th>Values</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <th>First Name</th>
      <td><%= @student.first_name %></td>
    </tr>
    <tr>
      <th>Last Name</th>
      <td><%= @student.last_name %></td>
    </tr>

    <tr>
      <th>Email Id</th>
      <td><%= @student.email %></td>
    </tr>

    <tr>
      <th>Year of Passing</th>
      <td><%= @student.year_of_passing %></td>
    </tr>

    <tr>
      <th>Rank</th>
      <td><%= @student.rank %></td>
    </tr>

    <tr>
      <th>Active</th>
      <%if @student.active %>
        <td class="bg-success">Yes</td>
      <%else %>
        <td class="bg-danger">No</td>
      <%end %>
    </tr>
    </tbody>
  </table>
  </div>
  <br>
  <div class="wrap_buttons" >

    <button class="btn btn-outline-waring"><%= link_to "Edit",edit_student_path(@student) ,{style: "text-decoration: none;color: inherit"} %></button>

    <button class="btn btn-outline-danger"><%= link_to "Delete",student_path(@student),{style: "text-decoration: none;color: inherit", method: :delete} %></button>

    <button class="btn btn-outline-success"> <%= link_to "Back" , students_path,{style: "text-decoration: none;color: inherit"} %></button>

  </div>


</div>