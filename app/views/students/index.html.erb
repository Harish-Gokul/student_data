<div class="div-center">

  <h1>Student Management system</h1>
  <button class="btn btn-outline-info"> <%= link_to "New", new_student_path ,{style: "text-decoration: none;color: inherit"} %></button>

  <div style="margin: 1% 10%">
  <table class="table table-hover">
    <thead class="thead-dark">
      <th>Id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th colspan="3">Action</th>
    </thead>
    <tbody>
      <% for student in @students %>
    <tr>
      <td> <%= student.id %></td>
      <td> <%= student.first_name %></td>
      <td> <%= student.last_name %></td>

      <td><button class="btn btn-outline-success"><%= link_to "Show",student_path(student) ,{style: "text-decoration: none;color: inherit"} %></button></td>
      <td><button class="btn btn-outline-waring"><%= link_to "Edit",edit_student_path(student) ,{style: "text-decoration: none;color: inherit"} %></button></td>
      <td><button class="btn btn-outline-danger"><%= link_to "Delete",student_path(student),{style: "text-decoration: none;color: inherit"} %></button></td>
    </tr>
      <%end %>

    </tbody>

  </table>
</div>

</div>